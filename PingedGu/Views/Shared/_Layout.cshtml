<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PingedGu</title>
    <link href="~/favicon.ico" rel="icon" type="image"/>

    <script type="importmap"></script>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/tailwind.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PingedGu.styles.css" asp-append-version="true" />

</head>
<body>
    <div id="wrapper">

        <header class="z-[100] h-[--m-top] fixed top-0 left-0 w-full flex items-center bg-white/80 bg-sky-50
        backdrop-blur-xl border-b border-slate-200">
            <div class="2xl:w-[--w-side] lg:w-[--w-side-sm]">
                <div class="flex items-center gap-1">
                    <button uk-toggle="target: #side__sidebar ; cls :!-translate-x-0" 
                        class="flex items-center justify-center w-8 h-8 text-xl rounded-full hover:bg-gray-100 xl:hidden group">
                        <ion-icon name="menu-outline" class="text-2l group-aria-expanded:hidden"></ion-icon>    
                        <ion-icon name="close-outline" class="hidden text-2l group-aria-expanded:block"></ion-icon>
                    </button>

                
                    <div id="logo" class="flex items-center">
                        <a href="#" class="flex items-center">
                            <img src="~/images/logo.png" alt="Logo" class="w-10 md:block hidden"/>
                            <span class="ml-2">PingedGu</span>
                        </a>
                    </div>
                </div>

                <div class="flex-1 relative">
                    <div class="max-w-[1220px] mx-auto flex items-center">
                        <form id="search--box" 
                            class="xl:w-[680px] sm:w-96 sm:relative rounded-xl overflow-hidden z-20 
                            bg-secondery max-md:hidden w-screen left-0 max-sm:fixed max-sm:top-2" 
                            action="/" method="post">

                        <ion-icon name="search" class="absolute left-4 top-1/2 -translate-y-1/2 "></ion-icon>
                        <input type="text" name="query" placeholder="PingedGu Search What?" 
                            class="w-full !pl-10 !font-normal !bg-transparent h-12 !text-sm">

                        </form>

                        <div class="flex items-center sm:gap-4 gap-12 absolute right-5 top-1/2 -translate-y-1/2 text-black">

                            <button type="button" class="sm:p-2 p-1 rounded-full relative sm:bg-secondery">
                                <svg fill="#000000" width="800px" height="800px" viewBox="0 0 32 32" version="1.1" xmlns="http://www.w3.org/2000/svg">
                                    <title>bell-ring</title>
                                    <path d="M26.25 17c0-8.338-4.457-12.506-9-13.15v-1.85c0-0.69-0.56-1.25-1.25-1.25s-1.25 0.56-1.25 1.25v0 1.85c-4.542 0.644-9 4.813-9 13.15-0.048 3.211-1.434 6.089-3.624 8.108l-0.008 0.007c-0.227 0.226-0.368 0.539-0.368 0.885 0 0.69 0.559 1.25 1.25 1.25h7.917c0.573 2.313 2.631 4 5.083 4s4.51-1.687 5.075-3.964l0.008-0.036h7.917c0.69-0 1.25-0.56 1.25-1.25 0-0.345-0.139-0.657-0.365-0.883l0 0c-2.214-2.016-3.606-4.901-3.635-8.112l-0-0.005zM16 28.75c-1.058-0.004-1.974-0.606-2.428-1.485l-0.007-0.015h4.871c-0.462 0.894-1.378 1.496-2.435 1.5h-0.001zM5.709 24.75c1.587-2.137 2.541-4.827 2.541-7.739 0-0.004 0-0.007 0-0.011v0.001c0-7.386 4.018-10.75 7.75-10.75 2.113 0.028 3.991 1.014 5.222 2.543l0.010 0.013c1.581 2.074 2.533 4.702 2.533 7.552 0 0.219-0.006 0.438-0.017 0.654l0.001-0.030c-0 0.042-0.001 0.092-0.001 0.141 0 2.876 0.955 5.529 2.565 7.659l-0.023-0.032zM5 11.708c0 0 0 0 0.001 0 0.69 0 1.25-0.56 1.25-1.25 0-0.534-0.335-0.99-0.806-1.169l-0.009-0.003-3-1.114c-0.129-0.050-0.279-0.078-0.436-0.078-0.69 0-1.25 0.56-1.25 1.25 0 0.534 0.335 0.99 0.806 1.169l0.009 0.003 3 1.114c0.129 0.049 0.279 0.078 0.435 0.078h0zM7.116 5.884c0.226 0.224 0.537 0.363 0.881 0.363 0.69 0 1.25-0.56 1.25-1.25 0-0.344-0.139-0.655-0.363-0.881l-3-3c-0.226-0.225-0.537-0.363-0.881-0.363-0.69 0-1.25 0.56-1.25 1.25 0 0.344 0.139 0.655 0.363 0.881l-0-0zM31.172 8.908c-0.182-0.48-0.638-0.815-1.172-0.815-0.156 0-0.306 0.029-0.444 0.081l0.009-0.003-3 1.114c-0.48 0.182-0.815 0.638-0.815 1.172 0 0.69 0.56 1.25 1.25 1.25 0 0 0 0 0.001 0h-0c0.156-0 0.306-0.029 0.444-0.081l-0.009 0.003 3-1.114c0.48-0.182 0.814-0.638 0.814-1.172 0-0.156-0.029-0.306-0.081-0.444l0.003 0.009zM24 6.25c0.001 0 0.001 0 0.002 0 0.345 0 0.657-0.14 0.883-0.366l3-3c0.226-0.226 0.366-0.539 0.366-0.884 0-0.691-0.56-1.251-1.251-1.251-0.346 0-0.658 0.14-0.885 0.367v0l-3 3c-0.226 0.226-0.366 0.539-0.366 0.884 0 0.69 0.56 1.25 1.25 1.25 0 0 0.001 0 0.001 0h-0z"></path>
                                </svg>
                            <div class="absolute top-0 right-0 -m-1 bg-red-600 text-white text-xs px-1 rounded-full" 
                            id="notificationsCount">0</div>
                            </button>

                            <div class="hidden bg-white pr-1.5 rounded-lg drop-shadow-xl md:w-[365px] w-screen border2"
                            uk-drop="offset:6;pos: bottom-right; mode: click; animate-out: true;">
                                <div class="flex items-center justify-between gap-2 p-4 pb-2">
                                    <h3 class="font-bold text-xl">Notifications</h3>
                                </div>

                                <div class="text-sm h-[400px] w-full overflow-y-auto pr-2">
                                    <div class="pl-2 p-1 text-sm font-normal" id="notification-dropdown">
                                        No Notifications
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="max-w-[1220px] mx-auto flex items-center">

                        <div class="flex items-center gap-sm-4 gap-2 absolute right-5 top-1/2 -translate-y-1/2 text-black">
                            <div class="rounded-full relative bg-secondery cursor-pointer shrink-0">
                                <img src="~/images/profilepic/Earth e.jpg" class="sm:w-9 sm:h-9 w-7 h-7 rounded-full shadow shrink-0" />
                            </div>
                            <div class="hidden bg-white rounded-lg drop-shadow-xl w-64 border2" 
                            uk-drop="offset: 6;pos: bottom-right; animate-out: true;">

                                <a href="#" >
                                    <div class="p-4 py-5 flex items-center gap-4">
                                        <img src="~/images/profilepic/Earth e.jpg" class="sm:w-10 sm:h-10 rounded-full shadow" />

                                        <div class="flex-1">
                                            <h4 class="text-sm font-medium text-black">Panma</h4>
                                            <div class="text-sm mt-1 text-blue-600 font-light/70">Panma</div>
                                        </div>
                                    </div>
                                </a>

                            </div>
                        </div>
                    </div>

                </div>
            </div>
            @* search *@
            @* notification icon *@
            @* profile icon *@
        </header>


        @RenderBody()
    </div>
    

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="https://cdn.jsdelivr.net/npm/uikit@3.25.8/dist/js/uikit.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>






