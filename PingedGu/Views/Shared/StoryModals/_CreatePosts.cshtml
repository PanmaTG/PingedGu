<div class="hidden lg:p-20" id="create-status" uk-modal="">
    <div class="uk-modal-dialog tt relative overflow-hidden mx-auto bg-white shadow-xl rounded-lg md:w-[520px] w-full">
        <div class="text-center py-4 border-b mb-0">
            <h2 class="text-sm font-medium !text-black">Create Post</h2>

            <button type="button" class="button-icon absolute top-0 right-0 m-2 uk-modal-close">
                <svg width="20px" height="20px" viewBox="0 0 16 16" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                    <path fill="#444" d="M15.1 3.1l-2.2-2.2-4.9 5-4.9-5-2.2 2.2 5 4.9-5 4.9 2.2 2.2 4.9-5 4.9 5 2.2-2.2-5-4.9z"></path>
                </svg>
            </button>
        </div>

        <form>
            <div class="space-y-5 mt-3 p-2">
                <textarea class="w-full !text-black placeholder:!text-gray-600 !bg-white !border-transparent focus:!border-transparent focus:!ring-transparent !font-normal !text-xl !text-left" 
                name="content"
                rows="2"
                placeholder="How's your day?"></textarea>
            </div>

            <div class="flex items-center gap-2 text-sm py-2 px-4 font-medium flex-wrap">
                <input id="imageUpload" type="file" class="hidden" name="uploadedContent" accept="image/png, image/jpeg"/>

                <div id="imagePreviewContainer" class="hidden" >
                    <img id="imagePreview" src="#" class="w-full h-auto rounded" />
                </div>
                
                <button type="button" id="imageUploadBtn" class="flex items-center gap-1.5 bg-sky-50 
                text-sky-600 rounded-full py-1 px-2 border-2 border-sky-100">
                    <ion-icon name="image" class="text-base"></ion-icon> Image
                </button>
            </div>

            <div class="p-5 flex justify-between items-center">
                <div class="flex items-center gap-2">
                    <button type="submit" class="button bg-blue-500 text-white py-2 px-12 text-[14px]"> Create </button>
                </div>

            </div>

        </form>
    </div>

</div>